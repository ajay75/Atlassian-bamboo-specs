<?xml version="1.0" encoding="UTF-8" ?>
<testsuite errors="0" skipped="0" tests="1" time="{{ time }}" failures="0" name="au.com.reece.de.bamboospecs">
    {% if (successful) %}
        <testcase time="{{ time }}" name="{{ specName }}"/>
    {% else %}
        <testcase time="{{ time }}" name="{{ specName }}">
            {%  autoescape 'html' %}
            <failure type="junit.framework.AssertionFailedError"
                     message="{{ failureMessage }}">
                {% for line in stacktrace %}
                    {{ line }}
                {% endfor %}
            </failure>
            {% endautoescape %}
        </testcase>
    {% endif %}
</testsuite>
